{% extends 'base.html.twig' %}

{% block title %}{{ 'utilisateur.inscription' | trans }}{% endblock %}

{% block body %}
    <h1>{{ 'utilisateur.inscription' | trans }}</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'utilisateur.mot_de_passe'
        }) }}

        <button type="submit" class="btn btn-lg btn-success mx-auto d-block">{{ 'utilisateur.inscription' | trans }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
